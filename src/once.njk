{% extends "src/base.njk" %}

{% block head %}
<title>Partidos Públicos | Partidos</title>

{% endblock %}

{% block content %}

    <div class="section m-0" style="background-image:url('/src/assets/banners/PP_01-12.png');">
		<div class="container">
			<div class="row">

				<div style="height:350px"></div>
			</div>
		</div>
	</div>
	<div class="section m-0" style="background-color:#f0f2fd">
		<div class="container">
			<div class="row">

                {% for partido in collections.partidospublicos%}
                <div class="col-lg-3 my-4">
                    <div class="cuadro_partido h-100 ">
                        <div class="div_imagen">
                            {% if partido.data.imagen %}
                            <img src="{{partido.data.imagen}}">
                            {%  else %}
                            <img src="/src/assets/imgs/placeholder.png">
                            {% endif %} 
                            <h1>{{partido.data.title | capitalize}} ({{partido.data.nombrecorto}})</h1>
                        </div>
                        <div class="texto">
                            <a href="{{partido.url}}" class="masinfo">Más Información</a>
                        </div>
                    </div>
                </div>
                {% endfor %}

			</div>
		</div>
	</div>

{% endblock %}